source 'https://rubygems.org'

#Ruby and Rails version
ruby '1.9.3'
gem 'rails', '3.2.11'

#Database
gem "mongoid", "~> 3.0.0"

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem "therubyracer" 
  gem 'sass-rails'
  gem 'uglifier', '>= 1.0.3'
  gem 'compass-rails' # For HTML 5 gem
  gem 'compass-h5bp' # For HTML 5 gem
  gem 'coffee-rails'
end

group :console do
  gem 'wirb'
  gem 'hirb'
  gem 'awesome_print'
end

#Misc
gem 'jquery-rails'
gem "haml-rails"
gem 'mongoid_slug'
gem 'html5-rails'

#To embed GA in app
gem 'google-analytics-rails'

#Used to build the json
gem 'jbuilder'